// 8.14(b) 由此可知當n值為4時,my_fun1(0.1, n) - my_fun1(0.1, n - 1)的差值會小於0.00001
#include <stdio.h>
#include <stdlib.h>
#include <math.h>

int fac(int);
double my_fun1(double, int);

int main(void)
{
    int n = 1;
    while (my_fun1(0.1, n) - my_fun1(0.1, n - 1) > 0.00001)
    {
        printf("當n的值等於%d, my_fun的差值為%1f\n", n, my_fun1(0.1, n) - my_fun1(0.1, n - 1));
        n++;
    }
    return 0;
}

int fac(int num)
{
    int i, sum = 1;
    int n = 2;
    for (i = 1; i <= num; i++)
    {
        sum *= i;
    }
    return sum;
}

double my_fun1(double x, int n)
{
    int i;
    double sum = 0;
    for (i = 1; i <= n; i++)
    {
        sum += pow(x, i) / fac(i);
    }
    return sum;
}