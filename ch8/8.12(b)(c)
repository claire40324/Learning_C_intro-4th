// 8.12(b)(c) 由此結果可看出當n趨進或大於21時,值會維持為1.000
#include <stdio.h>
#include <stdlib.h>
#include <math.h>

double my_fun(int n)
{
    int i;
    double sum = 0;
    double x = 1;
    for (i = 1; i <= n; i++)
    {
        sum += x / pow(2, i); //整數除整數還是整數,需把被除數或是兩個都轉換為浮點數
    }
    return sum;
}
int main(void)
{
    int i = 1;
    while (my_fun(i) < 1)
    {
        printf("%f ", my_fun(i));
        printf("%d\n", i);
        i++;
    }
    return 0;
}