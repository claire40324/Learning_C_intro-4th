#include <stdio.h>
#include <stdlib.h>
#include <math.h>

int fac(int);
double my_fun(double x, int n);
int main(void)
{
    printf("%1f, %1f", my_fun(2.2, 3), my_fun(2.2, 5));
    return 0;
}

double my_fun(double x, int n)
{
    int i;
    double sum = 0;
    for (i = 1; i <= n; i++)
    {
        sum += pow(-1, i) * pow(x, 2 * i + 1) / fac(2 * i + 1);
    }
    return sum;
}

int fac(int x)
{
    int i, power = 1;
    for (i = 1; i <= x; i++)
    {
        power *= i;
    }
    return power;
}