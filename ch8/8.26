#include <stdio.h>
#include <stdlib.h>

void counter(void);
double rpower( double, int);
int main(void)
{
    rpower(2.0,9);
    return 0;
}
void counter(void)
{
    static int a = 1;
    printf("counter已被呼叫%d次了\n", a);
    a++;
}
double rpower(double b, int n)
{
    counter();
    if( n == 1)
    {
        return b;
    }
    else 
    {
        return b* rpower( b, n-1);
    }
}