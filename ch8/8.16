#include <stdio.h>
#include <stdlib.h>

int find_k(int);

int main(void)
{
    int n;
    while (1)
    {
        printf("請輸入一個整數n, 將從4k+2找一個最接近n的k值(按a已停止)：");
        scanf("%d", &n);
        printf("%d\n", find_k(n));
    }
    return 0;
}

int find_k(int n)
{
    int a, k;
    a = (n - 2) % 4;
    k = (n - 2) / 4;
    if (n <= 0)
        return 0;
    else if (a > 2)
        k = k + 1;
    return k;
}