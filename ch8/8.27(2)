// 8.27 (2)
#include <stdio.h>
#include <stdlib.h>

int fib1(int);
int fib2(int);
int c1, c2;

int main(void)
{
    int n;
    for (n = 1; n <= 30; n++)
    {

        c1 = 0, c2 = 0;
        fib1(n);
        printf("n=%d, for迴圈%d次,", n, c1);
        fib2(n);
        printf("遞迴%d次\n", c2);
    }
    return 0;
}
int fib2(int n) //遞迴
{
    c2++;
    if (n == 1 || n == 2)
    {
        return 1;
    }
    else
    {
        return (fib2(n - 1) + fib2(n - 2));
    }
}
//迴圈算次數方法二
int fib1(int n)
{
    int sum = 1, i;
    int j = 1, k = 1;
    for (i = 1; i <= n; i++)
    {
        c1++;
        if (n == 1 || n == 2)
        {
            return 1;
        }
        else
        {
            sum = j + k;
            j = k;
            k = sum;
        }
    }
    return sum;
}

//遞迴費氏數列另一種寫法
#include <stdio.h>
#include <stdlib.h>

int fib1(int n) //遞迴
{
    if (n != 1 && n != 2)
    {
        return fib1(n - 1) + fib1(n - 2);
    }
    else
    {
        return 1;
    }
}

int main()
{
    printf("%d", fib1(4));
    return 0;
}