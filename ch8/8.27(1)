// 8.27(1)
#include <stdio.h>
#include <stdlib.h>

int fib1(int);
int fib2(int);
int c1, c2;

int main(void)
{
    int n;
    for (n = 1; n <= 30; n++)
    {

        c1 = 1, c2 = 0;
        fib1(n);
        printf("n=%d, for迴圈%d次,", n, c1);
        fib2(n);
        printf("遞迴%d次\n", c2);
    }
    return 0;
}
int fib2(int n) //遞迴
{
    c2++;
    if (n == 1 || n == 2)
    {
        return 1;
    }
    else
    {
        return (fib2(n - 1) + fib2(n - 2));
    }
}
//迴圈算次數方法一
int fib1(int n) //迴圈跟答案所算出次數不同但可以顯示相同答案
{
    int sum = 1, i;
    int j = 1, k = 1;
    if (n != 1 && n != 2) //不能寫or ,or 是其中有一符合就執行 需改為and
    {
        for (i = 2; i <= n; i++)
        {
            c1++;
            sum = j + k;
            j = k;
            k = sum;
        }
    }
    return sum;
}